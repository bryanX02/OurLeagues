<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ParticipantesTorneoFragment">

    <TextView
        android:id="@+id/txtTituloEquiposBaloncesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:textSize="14dp"
        android:text="Equipos del torneo" />

    <ListView
        android:id="@+id/listViewEquiposBaloncesto"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_below="@id/txtTituloEquiposBaloncesto"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnCrearTorneoBaloncesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewEquiposBaloncesto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="CREAR"
        android:textColor="@color/blanco_roto"
        android:textSize="12sp" />

</RelativeLayout>