<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTorneoActivo"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/round_outline"
            />

        <TextView
            android:id="@+id/txtNombreTorneoActivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgTorneoActivo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Champ"/>

        <TextView
            android:id="@+id/txtDescripcionTorneoActivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgTorneoActivo"
            android:layout_below="@+id/txtNombreTorneoActivo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="Torneo de Voleibol"/>

        <TextView
            android:id="@+id/txtDatosTorneoActivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgTorneoActivo"
            android:layout_below="@+id/txtDescripcionTorneoActivo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="Ronda 6"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/txtNombreTorneoActivo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/join"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>