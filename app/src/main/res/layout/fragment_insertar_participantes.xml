<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.creartorneo.ParticipantesTorneoFragment">

    <TextView
        android:id="@+id/txtInsertarParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="14dp"
        android:text="AÃ±ada los participantes del torneo" />

    <TextView
        android:id="@+id/txtNumeroParticipantesTorneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtInsertarParticipantes"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="14dp"
        android:text="12" />

    <ListView
        android:id="@+id/listViewParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_below="@id/txtInsertarParticipantes"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:divider="@null"
        android:dividerHeight="10dp" />

    <Button
        android:id="@+id/btnCrearTorneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewParticipantes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="CREAR"
        android:textColor="@color/blanco_roto"
        android:textSize="12sp" />

</RelativeLayout>