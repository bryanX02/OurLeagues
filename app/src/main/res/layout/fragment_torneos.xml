<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.app.TorneosFragment">

    <TextView
        android:id="@+id/txtTituloTorneos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/azulOscuro"
        android:text="TORNEOS"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/txtListaTorneos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/txtTituloTorneos"
        android:textColor="@color/azulOscuro"
        android:text="Tu lista"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnCrearTorneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTituloTorneos"
        android:layout_toRightOf="@id/txtListaTorneos"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="80dp"
        android:text="Crear Torneo" />

    <ListView
        android:id="@+id/listViewListaTorneos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCrearTorneo"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="70dp"
        android:divider="@null"
        android:dividerHeight="10dp" />

</RelativeLayout>