<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DatosTorneoFragment">

    <TextView
        android:id="@+id/txtTituloConfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:textSize="14dp"
        android:text="ConfiguraciÃ³n del Torneo" />

    <TextView
        android:id="@+id/txtNombreTorneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/txtTituloConfiguracion"
        android:textSize="14dp"
        android:text="Nombre del torneo" />

    <EditText
        android:id="@+id/eTxtNombreTorneo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:inputType="text"
        android:layout_below="@id/txtNombreTorneo"
        android:hint="Mi torneo" />

    <TextView
        android:id="@+id/txtNumeroEquipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="44dp"
        android:layout_below="@+id/txtTituloConfiguracion"
        android:layout_toRightOf="@+id/txtNombreTorneo"
        android:textSize="14dp"
        android:text="Numero de Equipos" />

    <EditText
        android:id="@+id/eTxtNumeroEquipos"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:inputType="number"
        android:layout_below="@+id/txtNumeroEquipos"
        android:layout_toRightOf="@+id/eTxtNombreTorneo"
        android:hint="0" />

    <TextView
        android:id="@+id/txtFechaInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/eTxtNombreTorneo"
        android:textSize="14dp"
        android:text="Fecha de Inicio" />

    <EditText
        android:id="@+id/eTxtFechaInicio"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFechaInicio"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:inputType="date"
        android:hint="20/05/2022" />

    <TextView
        android:id="@+id/txtFechaFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="44dp"
        android:layout_below="@+id/eTxtNumeroEquipos"
        android:layout_toRightOf="@+id/txtNombreTorneo"
        android:textSize="14dp"
        android:text="Fecha de Fin" />

    <EditText
        android:id="@+id/eTxtFechaFin"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="55dp"
        android:inputType="date"
        android:layout_below="@+id/txtFechaFin"
        android:layout_toRightOf="@+id/eTxtFechaInicio"
        android:hint="20/05/2022" />

    <TextView
        android:id="@+id/txtUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/eTxtFechaFin"
        android:textSize="14dp"
        android:text="Ubicacion" />

    <EditText
        android:id="@+id/eTxtUbicacionTorneo"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:inputType="text"
        android:layout_below="@+id/txtUbicacion"
        android:hint="Online" />

    <Button
        android:id="@+id/btnEliminatorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eTxtFechaFin"
        android:layout_toRightOf="@+id/eTxtUbicacionTorneo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="15dp"
        android:text="Eliminatorias"
        android:textColor="@color/blanco_roto"
        android:textSize="12sp" />


</RelativeLayout>